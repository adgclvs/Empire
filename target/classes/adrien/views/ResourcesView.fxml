    </VBox>
    <VBox spacing="2" alignment="CENTER" GridPane.rowIndex="3">
        <ImageView fx:id="coalImage" />
        <Label fx:id="coalLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    </VBox>
    <VBox spacing="2" alignment="CENTER" GridPane.rowIndex="4">
        <ImageView fx:id="ironImage" />
        <Label fx:id="ironLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
