    </VBox>
    <VBox spacing="2" alignment="CENTER" GridPane.rowIndex="8">
        <ImageView fx:id="toolsImage" />
        <Label fx:id="toolsLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
